<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/purple_500"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/decorator"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:clickable="true"
            android:drawableTop="@drawable/decorate"
            android:drawableTint="@color/white"
            android:text="Decorator"
            android:textSize="7dp" />

        <Button
            android:id="@+id/shopping"

            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:clickable="true"
            android:drawableTop="@drawable/shopping"
            android:drawableTint="@color/white"
            android:text="Shopping"
            android:textSize="7dp" />

        <Button
            android:id="@+id/ideas"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:clickable="true"
            android:drawableTop="@drawable/ideas"
            android:drawableTint="@color/white"
            android:text="Ideas"
            android:textSize="7dp" />

        <Button
            android:id="@+id/palette"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:clickable="true"
            android:drawableTop="@drawable/palette"
            android:drawableTint="@color/white"
            android:text="Palette"
            android:textSize="7dp" />

        <Button
            android:id="@+id/account"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:clickable="true"
            android:drawableTop="@drawable/account"
            android:drawableTint="@color/white"
            android:text="Account"
            android:textSize="7dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping\nActivity"
        android:textAlignment="center"
        android:textSize="16pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>